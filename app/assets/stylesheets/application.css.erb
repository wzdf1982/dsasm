.ui-icon-loading {
    background: url(http://code.jquery.com/mobile/1.1.0-rc.1/images/ajax-loader.png);
    background-size: 46px 46px;
    width:46px;
    height:46px;
    -webkit-transform: rotate(360deg);
    -webkit-animation-name: spin;
    -webkit-animation-duration: 1s;
    -webkit-animation-iteration-count:  infinite;
    -webkit-animation-timing-function: linear;
}
@-webkit-keyframes spin {
    from {-webkit-transform: rotate(0deg);}
    to {-webkit-transform: rotate(360deg);}
}

.ui-page {background:#ececec;height:100%;}
.p1 {line-height: 16px;font-size:12px;color:#666666}

TD {
 font-family: Arial, Helvetica, sans-serif;
 line-height: 16px;
 font-size: 12px;
 color: #666666;
}

form {
 width: 100%;
 height: 100%;
}

#content {
  background: #ececec;
  position: relative;
}

#copyright {
  background: #ececec;
  position: relative;
  overflow: hidden;
  top: 30px;
  width: 90%;
  margin: 0 auto 0 auto;
}

#copyright_index {
  position: fixed;
  bottom: 10px;
  right: 10px;
  overflow: hidden;
}
#copyright_index img {
  float: right;
}
#copyright img {
  float: right;
}

#color_line {
 background: url(<%= asset_data_uri 'ColorLine.png' %>)
}

#bg_top_banner {
	z-index: 1000;
	position: fixed;
	width: 100%;

	background: #CFCECE;
	color: #333;
	font-weight: 700;
	text-shadow: 0 1px 0 #eee;
	background-image: -webkit-gradient(linear,left top,left bottom,from(#FFF),to(#CFCECE));
	background-image: -webkit-linear-gradient(#FFF,#CFCECE);
	background-image: -moz-linear-gradient(#FFF,#CFCECE);
	background-image: -ms-linear-gradient(#FFF,#CFCECE);
	background-image: -o-linear-gradient(#FFF,#CFCECE);
	background-image: linear-gradient(#FFF,#CFCECE);
	background-image: linear-gradient(#FFF,#CFCECE);

}

#bg_item {
 background: url(<%= asset_data_uri 'bgItem.png' %>)
}

a[href*="feedback"] {
  text-decoration: none;
}
